{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MetricsLM TrustScore Minimum Schema",
  "type": "object",
  "required": [
    "agent_name",
    "provider",
    "primary_use_case",
    "industry_vertical",
    "deployment_status",
    "compliance",
    "risk_profile",
    "explainability",
    "bias_mitigation",
    "trust_metadata"
  ],
  "properties": {
    "agent_name": {
      "type": "string"
    },
    "provider": {
      "type": "object",
      "required": [
        "company_name",
        "website",
        "contact_email"
      ],
      "properties": {
        "company_name": {
          "type": "string"
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "contact_email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "primary_use_case": {
      "type": "string"
    },
    "industry_vertical": {
      "type": "string"
    },
    "deployment_status": {
      "type": "string",
      "enum": [
        "Prototype",
        "Beta",
        "Production"
      ]
    },
    "compliance": {
      "type": "object",
      "required": [
        "standards",
        "audit_report_available",
        "last_audit_date"
      ],
      "properties": {
        "standards": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "audit_report_available": {
          "type": "boolean"
        },
        "last_audit_date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "risk_profile": {
      "type": "object",
      "required": [
        "risk_level",
        "incident_history"
      ],
      "properties": {
        "risk_level": {
          "type": "string",
          "enum": [
            "Low",
            "Medium",
            "High"
          ]
        },
        "incident_history": {
          "type": "boolean"
        }
      }
    },
    "explainability": {
      "type": "object",
      "required": [
        "support",
        "techniques"
      ],
      "properties": {
        "support": {
          "type": "string",
          "enum": [
            "None",
            "Partial",
            "Full"
          ]
        },
        "techniques": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "bias_mitigation": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "trust_metadata": {
      "type": "object",
      "required": [
        "self_certified",
        "certification_status",
        "submitted_on"
      ],
      "properties": {
        "self_certified": {
          "type": "boolean"
        },
        "certification_status": {
          "type": "string"
        },
        "submitted_on": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
